<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Battlelog_Desktop"
        xmlns:Wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf" x:Class="Battlelog_Desktop.BrowserWindow"
        mc:Ignorable="d"
        Title="Battlelog / Logging in..." Height="720" Width="1280" WindowStartupLocation="CenterScreen" WindowState="Maximized" Loaded="Window_Loaded" Icon="/Images/favicon.ico">
	<Grid>
		<Grid.Background>
			<ImageBrush x:Name="BackgroundImage"/>
		</Grid.Background>

		<Wpf:WebView2 x:Name="BrowserView" Loaded="BrowserView_Loaded" NavigationCompleted="BrowserView_NavigationCompleted"/>
	</Grid>
</Window>
